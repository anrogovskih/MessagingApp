<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/chat_action_video_message"
            style="@style/ChatAction"
            android:text="@string/chat_action_video_message"
            app:drawableStartCompat="@drawable/ic_videocam" />

        <TextView
            android:id="@+id/chat_action_take_photo"
            style="@style/ChatAction"
            android:text="@string/chat_action_take_photo"
            app:drawableStartCompat="@drawable/ic_camera" />

        <TextView
            android:id="@+id/chat_action_pick_image"
            style="@style/ChatAction"
            android:text="@string/chat_action_pick_image"
            app:drawableStartCompat="@drawable/ic_image_stack" />

        <TextView
            android:id="@+id/chat_action_cancel"
            style="@style/ChatAction"
            android:text="@string/common_cancel"
            app:drawableStartCompat="@drawable/ic_arrow_back" />
    </LinearLayout>
</layout>
