<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/SplashTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.splash.SplashActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_horizontal_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/splash_spinner_size"
            android:layout_height="@dimen/splash_spinner_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_horizontal_guideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>